<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressIndicatorComponent">
        <attr name="message" format="string" />
        <attr name="android:backgroundDimEnabled" format="boolean" />
        <attr name="headerFontColor" format="reference|color" />
    </declare-styleable>

    <style name="TextAppearance" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?headerFontColor</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Header1TextAppearance" parent="TextAppearance">
        <item name="android:textSize">@dimen/header1_text_size</item>
    </style>

    <style name="GeneralLoader">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/bright_orange</item>
    </style>
</resources>